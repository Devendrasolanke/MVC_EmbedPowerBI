@model AppOwnsData.Models.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}

<style>
    body {
        background: linear-gradient(to right, #094780 0%, #094780 40%, #f5f9ff 60%, #f5f9ff 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100vh;
        margin: 0;
    }

    .reset-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .reset-card {
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        padding: 40px 35px 45px 35px;
        width: 100%;
        max-width: 400px;
        animation: fadeIn 0.6s ease-in-out;
    }

        .reset-card h3 {
            color: #0d6efd;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
        }

    .form-group {
        margin-bottom: 20px;
        width: 100%;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
        text-align: left;
    }

    .form-control {
        width: 100%;
        border-radius: 10px;
        border: 1px solid #ccc;
        height: 42px;
        font-size: 15px;
        padding: 8px 12px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #0d6efd;
            outline: none;
            box-shadow: 0 0 4px rgba(13, 110, 253, 0.3);
        }

    .btn-primary {
        border-radius: 10px;
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        font-weight: 600;
        background-color: #094780;
        border: none;
        transition: background-color 0.2s ease-in-out;
        display: block;
        color: white !important;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .error-message {
        color: #dc3545;
        font-weight: 600;
        text-align: center;
        margin-top: 10px;
        font-size: 14px;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ✅ Power BI Branding */
    .powerbi-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        margin-left: 70px;
        animation: fadeIn 0.8s ease-in-out;
    }

        .powerbi-header img {
            width: 45px;
            height: auto;
            margin-right: 10px;
        }

        .powerbi-header span {
            font-size: 20px;
            font-weight: 700;
            color: #ffbf00; /* ✅ Power BI Yellow */
            letter-spacing: 1px;
        }

    /* Popup overlay */
    .center-popup {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.45);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 5000;
        animation: fadeInScale 0.3s ease-out;
    }

        .center-popup .popup-content {
            background: white;
            padding: 25px 35px;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
            text-align: center;
            box-shadow: 0px 6px 20px rgba(0,0,0,0.25);
            min-width: 280px;
        }

        .center-popup.success .popup-content {
            background-color: #28a745;
            color: #fff;
        }

        .center-popup.error .popup-content {
            background-color: #dc3545;
            color: #fff;
        }

    /* ✅ FIX: Razor needs only 1 */
    @@keyframes fadeInScale {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes popIn {
        from {
            transform: scale(0.7);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<!-- ✅ POPUP (success/error) -->
@if (TempData["popupMessage"] != null)
{
    <div id="centerPopup" class="center-popup @(TempData["popupType"])">
        <div class="popup-content">
            <span>@TempData["popupMessage"]</span>
        </div>
    </div>

    <script>
        window.onload = function () {

            const popup = document.getElementById("centerPopup");
            popup.style.display = "flex";

            // ✅ Fade out after 2.5 seconds
            setTimeout(() => {
                popup.style.opacity = "0";

                setTimeout(() => {
                    popup.style.display = "none";

                    // ✅ Redirect to Index AFTER popup animation
                    window.location.href = '@TempData["popupRedirect"]';

                }, 400);

            }, 2500);
        };
    </script>
}

<div class="reset-wrapper">
    <div class="reset-card">
        <h5 style="color:#dc3545;">Note : you have initial password, please reset with new password.</h5>
        <div class="powerbi-header">
            <img src="~/Content/Images/icon-power-bi.png" alt="Power BI Logo" />
            <span>Reset Password</span>
        </div>
        @*<h3 style="color:#094780;">🔐 Reset Password</h3>*@

        @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("New Password", new { @class = "form-label" })
                @Html.Password("newPassword", null, new { @class = "form-control", placeholder = "Enter new password", required = "required" })
            </div>

            <div class="form-group">
                @Html.Label("Confirm Password", new { @class = "form-label" })
                @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "Re-enter password", required = "required" })
            </div>

            if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
                <br />
            }
            <br />
            <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
        }
    </div>
</div>